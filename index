  <script>
    IDKit.mount({
      app_id: "app_e316619d0bdf8df1ff6ff6a82eb34f65",
      action: "veria",
      signal: "post_feed",
      container: "#world-id-button",
      onSuccess: (result) => {
        console.log("Verificado con World ID:", result);
        document.getElementById('world-id-button').style.display = 'none';
        document.querySelector('.new-post-container').style.display = 'flex';
      }
    });

    document.getElementById('publish-btn').onclick = () => {
      const text = document.getElementById('new-post').value.trim();
      if (!text) return;

      const post = document.createElement('div');
      post.className = 'post';

      const author = document.createElement('div');
      author.className = 'post-author';
      author.innerText = 'ðŸ‘¤ tÃº';

      const content = document.createElement('div');
      content.className = 'post-content';
      content.innerText = text;

      const actions = document.createElement('div');
      actions.className = 'post-actions';
      actions.innerHTML = 'ðŸ”¥ 0 &nbsp; ðŸ’¬ 0';

      post.appendChild(author);
      post.appendChild(content);
      post.appendChild(actions);

      const feed = document.getElementById('feed');
      feed.insertBefore(post, feed.firstChild);

      document.getElementById('new-post').value = '';
    };
  </script>
